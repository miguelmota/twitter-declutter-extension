{
  "manifest_version": 2,
  "name": "Twitter Declutter",
  "description": "Declutters and simplifies the Twitter interface.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "http://twitter.com/*",
    "https://twitter.com/*"
  ]
}
